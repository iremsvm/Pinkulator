<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.ColumnConstraints?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="10" alignment="CENTER" style="-fx-background-color: #ffe6f0;" padding="20">

    <TextField fx:id="display" text="0" editable="false" style="-fx-font-size: 24px;" maxWidth="240" />

    <GridPane hgap="5" vgap="5">
        <columnConstraints>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
        </columnConstraints>

        <!-- First Row -->
        <Button text="1" GridPane.rowIndex="0" GridPane.columnIndex="0" maxWidth="Infinity"/>
        <Button text="2" GridPane.rowIndex="0" GridPane.columnIndex="1" maxWidth="Infinity"/>
        <Button text="3" GridPane.rowIndex="0" GridPane.columnIndex="2" maxWidth="Infinity"/>
        <Button text="+" GridPane.rowIndex="0" GridPane.columnIndex="3" maxWidth="Infinity"/>

        <!-- Second Row -->
        <Button text="4" GridPane.rowIndex="1" GridPane.columnIndex="0" maxWidth="Infinity"/>
        <Button text="5" GridPane.rowIndex="1" GridPane.columnIndex="1" maxWidth="Infinity"/>
        <Button text="6" GridPane.rowIndex="1" GridPane.columnIndex="2" maxWidth="Infinity"/>
        <Button text="-" GridPane.rowIndex="1" GridPane.columnIndex="3" maxWidth="Infinity"/>

        <!-- Third Row -->
        <Button text="7" GridPane.rowIndex="2" GridPane.columnIndex="0" maxWidth="Infinity"/>
        <Button text="8" GridPane.rowIndex="2" GridPane.columnIndex="1" maxWidth="Infinity"/>
        <Button text="9" GridPane.rowIndex="2" GridPane.columnIndex="2" maxWidth="Infinity"/>
        <Button text="/" GridPane.rowIndex="2" GridPane.columnIndex="3" maxWidth="Infinity"/>

        <!-- Fourth Row -->
        <Button text="0" GridPane.rowIndex="3" GridPane.columnIndex="0" maxWidth="Infinity"/>
        <Button text="=" GridPane.rowIndex="3" GridPane.columnIndex="1" maxWidth="Infinity"/>
        <Button text="C" GridPane.rowIndex="3" GridPane.columnIndex="2" maxWidth="Infinity"/>
        <Button text="*" GridPane.rowIndex="3" GridPane.columnIndex="3" maxWidth="Infinity"/>
    </GridPane>
</VBox>

